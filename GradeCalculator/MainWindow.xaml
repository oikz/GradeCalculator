<Window x:Class="GradeCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeCalculator"
        mc:Ignorable="d"
        Title="Grade Calculator" Height="700" Width="600"
        ResizeMode="NoResize, CanMinimize">
    
    <Window.Resources>
        <Style TargetType="{x:Type DataGridCell}" x:Key="BlackCell">
            <Setter Property="Background" Value="Black"></Setter>
        </Style>
        <Style TargetType="{x:Type DataGridColumnHeader}" x:Key="BlackHeader">
            <Setter Property="Background" Value="Black"></Setter>
        </Style>
    </Window.Resources>
    
    <Grid Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--Background-->
        <Rectangle Grid.Column="0" HorizontalAlignment="Left" Height="684" Width="160" VerticalAlignment="Center"
                   Fill="Black" />
        <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="684" Width="450" VerticalAlignment="Center"
                   Fill="Black" />
        <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="684" Width="1" Stroke="White" Fill="White"
                   VerticalAlignment="Top" />

        <!--Menu and Side List box-->
        <Label Name="MenuTitle" Grid.Column="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top"
               Content="Main Menu?" Foreground="White" FontSize="40" />
        <ListBox Name="Courses" Grid.Column="0"  HorizontalAlignment="Left" Height="684" Width="160" Background="Black"
                 Foreground="White" DisplayMemberPath="Value.CourseCode" FontSize="30" BorderBrush="{x:Null}"
                 Focusable="False" SelectionChanged="ViewCourse">
        </ListBox>
    </Grid>
</Window>